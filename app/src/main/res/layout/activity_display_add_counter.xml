<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dwaters.dwaters_countbook.DisplayAddCounter">

    <EditText
        android:id="@+id/OpenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="154dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Counter"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OpenIvalue"
        android:layout_width="141dp"
        android:layout_height="41dp"
        android:layout_marginRight="227dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Value"
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OpenName" />

    <EditText
        android:id="@+id/OpenComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="153dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Comment"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OpenIvalue" />

    <Button
        android:id="@+id/AddNewCounter"
        android:layout_width="372dp"
        android:layout_height="53dp"
        android:text="@string/add"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="213dp"
        app:layout_constraintTop_toBottomOf="@+id/OpenComment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="450dp" />

</android.support.constraint.ConstraintLayout>
