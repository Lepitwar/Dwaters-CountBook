<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dwaters.dwaters_countbook.DisplayAddCounter">

    <EditText
        android:id="@+id/OpenName"
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Counter"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/OpenIvalue"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_marginRight="94dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Initial Value"
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OpenName" />

    <EditText
        android:id="@+id/OpenCvalue"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_marginRight="94dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Current Value"
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OpenIvalue" />

    <EditText
        android:id="@+id/OpenComment"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Comment"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OpenCvalue" />

    <TextView
        android:id="@+id/OpenDate"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Date Last Modified"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/OpenSave" />

    <Button
        android:id="@+id/OpenSave"
        android:layout_width="372dp"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="213dp"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OpenComment"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="450dp" />

    <TextView
        android:id="@+id/StaticOpenName"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:text="Name:"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="67dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/OpenName"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/StaticOpenIvalue"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:text="Initial: "
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/StaticOpenName"
        android:layout_marginLeft="51dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/OpenIvalue"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="Current: "
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/StaticOpenIvalue"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/OpenCvalue"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="131dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="Comments: "
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintRight_toLeftOf="@+id/OpenComment"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>
